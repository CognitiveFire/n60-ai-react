
server {
    listen 80;
    server_name n60.ai www.n60.ai;

    # Redirect all HTTP to HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name n60.ai www.n60.ai;

    ssl_certificate /etc/letsencrypt/live/n60.ai/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/n60.ai/privkey.pem;

    # Serve static React frontend
    root /home/ubuntu/n60-ai-react/dist;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    # Proxy API requests to backend
    location /api/ {
        proxy_pass http://localhost:5000;  # or your actual backend port
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
